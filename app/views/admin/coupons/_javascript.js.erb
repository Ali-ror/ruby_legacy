<% content_for :css_includes do %>
<%= stylesheet_link_tag "css/custom-theme/jquery-ui-1.8.7.custom.css" %>
<% end %>

<% content_for :js_includes do %>
<%= javascript_include_tag "jquery-ui-1.8.7.custom.min" %>
<% end %>

<script type="text/javascript">
  $( function() {
    $("#coupons tbody").sortable({
      update: function(event, ui) {
        //console.log($(this).sortable('serialize'));
        $.post('<%=sort_admin_territory_business_listing_coupons_path(@territory.id, @business_listing.id)%>'+"?"+$(this).sortable('serialize'));
      }
    });

  } );
</script>
