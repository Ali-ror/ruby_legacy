.custom-content
  %h2== Edit #{resource_name.to_s.humanize}
  
  = simple_form_for(@user, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    = render "form", :f => f, :ignore_password => true
    
    %p= f.submit "Update"