.all_rewards
  .yui3-g
    .yui3-u-1-4
      .container
        = image_tag '/images/defaults/normal_logo.gif'
    .yui3-u-3-4
      .container
        %h1
          Local Rewards For
          = @territory.name
        = link_to "For the latest Local Rewards, check back often: www.relylocal.com/rewards",
                  "http://www.relylocal.com/rewards"

  .description
    .custom-content
      = @territory.rewards_text.html_safe

  .rewards
    - @listings.each do |bl|
      .yui3-g
        .yui3-u-1-3
          .container
            = image_tag bl.logo.url( :normal )
            %br/
            = listing_info( bl )
        .yui3-u-2-3
          .container
            - bl.rewards.active.each_with_index do |r, i|
              .reward
                = reward_info( r, i )
